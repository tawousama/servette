										<attribute name="attrs">{'required': [('lastname', '=', False), ('type', '=', 'contact')]}</attribute>
								</field>
								<xpath expr="//field[@name='lastname']/parent::group" position="attributes">
										<attribute name="attrs"></attribute>
								</xpath>
