<odoo>
		<data>
				<record id="view_firstname_partner_form" model="ir.ui.view">
						<field name="model">res.partner</field>
						<field name="inherit_id" ref="partner_firstname.view_partner_form"/>
						<field name="arch" type="xml">
								<field name="lastname" position="attributes">
										<attribute name="attrs">{'required': [('firstname', '=', False), ('type', '=', 'contact')]}</attribute>
								</field>
