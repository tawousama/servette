<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<template id="report_pricelist_page">
				<style>
						.top_text {
						display: -webkit-box;
						max-width: 620px;
						-webkit-line-clamp: 2;
						-webkit-box-orient: vertical;
						overflow: hidden;
						margin: 0 auto;
						color:black;
						font-size:15px;
						}
						.table-borderless > tbody > tr > td,
						.table-borderless > thead > tr > th {
						border: none;
						}
						.table-borderless > thead > tr > th {
						font-size:14px;
						}
						.table-borderless > tbody > tr > td {
						font-size:12px;

						}

				</style>
				<div t-if="is_html_type" class="container bg-white">
						<t t-set="company" t-value="env.company"/>
						<div class="row">
								<div class="col-12 text-center">
										<img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 96px;max-width:600px;"
										     alt="Logo"/>
								</div>
						</div>
						<div class="row">
								<div class="col-12 text-center">
										<p class="top_text">
												Grande sélection d'instruments à vent et à cordes
												<span class="ml-2">&amp;bull;&amp;nbsp;</span>Vente d'instruments neufs et d'occasions
												<span class="ml-2">&amp;bull;&amp;nbsp;</span>Service de locations et réparations
												<span class="ml-2">&amp;bull;&amp;nbsp;</span>Atelier de lutherie, guitare, bois et cuivres
										</p>
								</div>
						</div>
				</div>
				<div class="container bg-white" style="color:black !important;">
						<div class="row p-3"
						     >
								<div class="col-12 text-center o_title_sm">
										<h2 style="font-size:15px !important;">
												<b>
														<t t-esc="pricelist.title_report_sm"/>
												</b>
										</h2>

								</div>
						</div>

						<div class="row">
								<div class="col-12">
										<table class="table table-sm table-borderless" style="page-break-inside: avoid;">
												<thead>
														<tr>
																<t t-if="with_ref">
																		<th>Reference</th>
																</t>
																<th>Designation</th>
																<th class="text-right">Price</th>
														</tr>
												</thead>
												<tbody>
														<t t-foreach="products" t-as="product">
																<tr>
																		<t t-if="with_ref">
																				<td style="white-space: nowrap !important;">
																						<a t-if="is_html_type" href="#" class="o_action"
																						   data-model="product.template"
																						   t-att-data-res-id="product['id']">
																								<t t-esc="product['default_code']"/>
																						</a>
																						<t t-else="">
																								<t t-esc="product['default_code']"/>
																						</t>
																				</td>
																		</t>
																		<td>
																				<a t-if="is_html_type" href="#" class="o_action"
																				   data-model="product.template"
																				   t-att-data-res-id="product['id']">
																						<t t-esc="product['name']"/>
																				</a>
																				<t t-else="">
																						<t t-esc="product['name']"/>
																				</t>
																		</td>
																		<td class="text-right">
																				<span t-esc="'%.2f' % product['price']"/>
																		</td>
																</tr>
														</t>
												</tbody>
										</table>
								</div>
						</div>

				</div>
				<div t-if="is_html_type" class="container">
						<div class="row">
								<div class="col-12 text-center">
										<t t-call="pricelist_report_servette_music.pricelist_report_sm_footer"/>

								</div>
						</div>
				</div>
		</template>


		<template id="report_pricelist">
				<t t-call="web.basic_layout">

						<div t-if="not is_html_type" class="header">
								<div class="row">
										<t t-set="company" t-value="env.company"/>
										<div class="col-12 text-center">
												<img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 60px;max-width:600px;"
												     alt="Logo"/>
										</div>
								</div>
								<div class="row">
										<div class="col-12 text-center">
												<p
													style="display: -webkit-box;max-width: 620px;-webkit-line-clamp: 2;-webkit-box-orient: vertical;
													overflow: hidden;margin: 0 auto;font-size:14px;color:black;">
														Grande sélection d'instruments à vent et à cordes
														<span class="ml-2">&amp;bull;&amp;nbsp;</span>Vente d'instruments neufs et d'occasions
														<span class="ml-2">&amp;bull;&amp;nbsp;</span>Service de locations et réparations
														<span class="ml-2">&amp;bull;&amp;nbsp;</span>Atelier de lutherie, guitare, bois et cuivres
												</p>
										</div>
								</div>
						</div>

						<div class="page">
								<t t-call="pricelist_report_servette_music.report_pricelist_page"/>
						</div>

						<t t-if="not is_html_type">
								<t t-call="pricelist_report_servette_music.pricelist_report_sm_footer"/>
						</t>
												                                <p style="page-break-before: always;"/>

				</t>
		</template>

