        <!-- Product Tree View -->
        <record id="view_amazon_product_product_form_inherits" model="ir.ui.view">
            <field name="name">product.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[4]" position="after">
                    <page string="Attributes">
                        <group>
                            <group string="Généralités">
                                <field name="product_to_be_exported" readonly="1"/>
                                <field name='product_to_be_updated'/>
                                <field name="categ_id" domain="[('presta_id','!=',False)]" required="1"/>
                                <field name="list_price"/>
                                <field name="wholesale_price"/>
                                <field name="show_price"/>
                                <field name="presta_id"/>
                                <field name="condition"/>
                                <field name="prest_active" invisible="1"/>
                                <field name="manufacturer_id" domain="[('manufacturer','=',True)]"/>
                                <!--<group>-->
                                <!--<field name="product_description" readonly="1"/>-->
                                <!--</group>-->
                                <field name="supplier_id" domain="[('supplier_rank','=',1)]" invisible="1"/>
                                <field name="tax_group_id"/>

                                <field name="product_onsale" invisible="0"/>
                                <field name="product_instock" invisible="1"/>
                                <field name="prd_type_name" invisible="1"/>
                                <!--<field name="product_description" readonly="1"/>-->

                                <field name="prest_img_id" invisible="1"/>
                            </group>
                            <group>
                                <separator colspan="4" string="Product Dimension"/>
                                <field name="product_lngth" string="Prestashop Length"/>
                                <field name="product_width" string="Prestashop Width"/>
                                <field name="product_wght" string="Prestashop Weight"/>
                                <field name="product_hght" string="Prestashop Height"/>
                                <field name="prd_label" invisible='1'/>

                                <separator colspan="4" string="Meta"/>
                                <field name="website_meta_title"/>
                                <field name="website_meta_description"/>
                                <field name="website_meta_keywords"/>
                                <field name="seo_name"/>
                                <field name="website_published"/>
                                <!--                                <group string="Product Dimension">-->
                                <!--                                    <field name="product_lngth" string="Prestashop Length"/>-->
                                <!--                                    <field name="product_width" string="Prestashop Width"/>-->
                                <!--                                    <field name="product_wght" string="Prestashop Weight"/>-->
                                <!--                                    <field name="product_hght" string="Prestashop Height"/>-->
                                <!--                                    <field name="prd_label" invisible='1'/>-->
                                <!--                                </group>-->
                                <!--                                <group string="Meta">-->
                                <!--                                    <field name="website_meta_title"/>-->
                                <!--                                    <field name="website_meta_description"/>-->
                                <!--                                    <field name="website_meta_keywords"/>-->
                                <!--                                    <field name="seo_name"/>-->
                                <!--                                    <field name="website_published"/>-->
                                <!--                                </group>-->
                            </group>

                        </group>
                        <!--<group>-->
                        <!--<field name="shop_ids" readonly="1"/>-->
                        <!--</group>-->
                        <group>
                            <separator colspan="4" string="Product Images"/>
                            <field name="product_img_ids"/>
                            <field name="product_list_id" invisible="1">

                            </field>
                            <field name="prestashop_product" invisible="1"/>
                        </group>
                        <group>
                            <separator colspan="4" string="Description"/>
                            <field name="website_description"/>
                            <field name="video_url" widget="url"/>
                        </group>
                        <group>
                            <separator colspan="4" string="Prestashop Shops"/>
                            <field name="tmpl_shop_ids"/>
                        </group>
                        <notebook>
                            <page string="Summary">
                                <field name="summary"/>
                            </page>
                            <page string="Extra Fields">
                                <group>
                                    <field name="sp_eacute_specifications_techniques"/>
                                    <field name="demande_catalogue"/>
                                </group>

                            </page>
                            <page string="Catègories Prestashop">
                                <field name="product_category_ids" widget="many2many_checkboxes" nolabel="1"/>
                            </page>
                        </notebook>
                    </page>
                </xpath>

                <xpath expr="//field[@name='categ_id']" position="replace">
                    <field name="odoo_categ_id"/>
                    <field name="categ_id" domain="[('presta_id','!=',True)]" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='general_information']" position="after">
                    <page name="product_spec" string="Specifications">
                        <field name="product_spec_ids">
                            <tree editable="bottom">
                                <field name="feature" required="1"/>
                                <!--                                <field name="feature_value"/>-->
                                <field name="feature_value" domain="[('feature_id','=',feature)]" required="1"
                                       context="{'default_feature':feature}"/>
                            </tree>
                        </field>
                    </page>
                </xpath>


            </field>
        </record>

