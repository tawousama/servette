<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_create_prestashop_shop" model="ir.ui.view">
        <field name="name">view.create.prestashop.shop</field>
        <field name="model">create.prestashop.shop</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Create Prestashop Shop">
                <separator string="Prestashop Shop" />

                    <h1>
                        <field name="name" required="True"/>
                    </h1>
                <group>
                    <field name="company_id"/>
                </group>
                <group>
                    <field name="version"/>
                </group>
                <notebook colspan="4">
                    <page string="Authentication">
                        <separator string="Account Credentials"/>
                        <group>
                            <field name="location"/>
                            <field name="webservice_key" password='True'/>
                            <field name="shipping_product_id" required='True'/>
                        </group>
                    </page>

                    <page string="Configuration">
                        <group name="Main_configuration" string="Main Configuration">
                            <field name="tax_type"/>
                            <field name="mapped_product_by"/>
                            <field name="warehouse_id" required="True"/>
                        </group>
                    </page>
                </notebook>

                <footer>
<!--                    <group col="2" colspan="4">-->
                        <button name="create_prestashop_action" string="Create Prestashop Shop" type="object"
                                class="btn-primary"/>

                        <button special="cancel" string="Cancel" class="btn-secondary"/>
<!--                    </group>-->
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_prestashop_shop" model="ir.actions.act_window">
        <field name="name">Create Prestashop Shop</field>
        <field name="res_model">create.prestashop.shop</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_create_prestashop_shop"/>
        <field name="target">new</field>
    </record>


