<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="prestashop_on_board_instance_configuration_wizard" model="ir.ui.view">
        <field name="name">Configure Instance</field>
        <field name="model">res.config.prestashop.instance</field>
        <field name="arch" type="xml">
            <form string="Confirmation?" class="o_bigcommerce_ept">
                <h1 class="font-weight-bold o_on_board_heading">
                    Do you have done all the configurations?
                </h1>
                <footer>
                    <!--                    <button string="Yes" type="object"-->
                    <!--                            name="All_done" class="oe_highlight btn btn-primary o_onboard_button"/>-->
                    <button class="oe_highlight btn btn-primary o_onboard_button_white"
                            type="object"
                            string="No" name="not_done"/>
                </footer>
                <script>
                    $('document').ready(function(){
                    $('div.o_form_view.o_prestashop_gt').parents('div.modal-content').addClass('on_board_custom_form');
                    $('div.on_board_custom_form').find('table.o_group').find('label').addClass('on_board_field_label');
                    $('div.on_board_custom_form').find('table.o_group').find('td').find('span').addClass('on_board_field');
                    $('div.on_board_custom_form').find('table.o_group').find('td').find('a').addClass('on_board_field');
                    $('div.on_board_custom_form').find('table.o_group').find('td').find('a').find('span').removeClass('on_board_field');
                    });
                </script>
            </form>
        </field>
    </record>

    <record id="prestashop_on_board_instance_configuration_action"
            model="ir.actions.act_window">
        <field name="name">Instances</field>
        <field name="res_model">res.config.prestashop.instance</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="prestashop_on_board_instance_configuration_wizard"/>
    </record>
</odoo>