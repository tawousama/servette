<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="paperformat_frenchcheck" model="report.paperformat">
            <field name="name">Epson TM 80mm cs</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">25</field>
            <field name="page_width">80</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">180</field>
        </record>

        <record id="report_stock_production_lot_med" model="ir.actions.report">
            <field name="name">Lot-Serial SM Medium without serial</field>
            <field name="model">stock.lot</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">etiquette_sm_report.report_stock_production_lot_med_view</field>
            <field name="report_file">etiquette_sm_report.report_stock_production_lot</field>
            <field name="print_report_name">'Lot-Serial SM Medium without serial'</field>
            <field name="binding_model_id" ref="stock.model_stock_lot"/>
            <field name="paperformat_id" ref="paperformat_frenchcheck"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_stock_production_lot_med_view">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="o">
                        <div class="my-3 text-left" style="width: 200mm; height: 15mm;">
                            <div class="row" style="overflow: hidden; font-size: 30px; font-weight : bold;">
                                <div class="col-12 text-left">
                                    <strong t-field="o.product_id.name"/>
                                </div>
                            </div>
                            <div class="row" style="font-size: 30px;">
                                <div class="col-12 text-left">
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>&#160;&#160;
                                    <span t-field="o.product_id.barcode"/>&#160;&#160;
                                    <span t-field="o.product_id.lst_price" t-options="{'widget': 'monetary', 'display_currency': o.product_id.company_id.currency_id}"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-9 text-left">
                                    <t t-if="o.product_id.barcode">
                                        <img t-if="o.product_id.barcode" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.product_id.barcode, 600, 100)" style="width:100%;height::3rem;"/>
                                    </t>
                                    <t t-else="">
                                        <span class="text-muted">No barcode available</span>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <p style="page-break-before:always;"/>
                    </t>
                </div>
            </t>
        </template>

