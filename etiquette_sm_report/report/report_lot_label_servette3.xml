<?xml version="1.0"?>
<odoo>
    <template id="report_lot_label_servette3">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="o">
                    <div class="container my-3" style="width: 190mm; height: 165mm;">
                        <div class="row text-center" style="height: 66mm; overflow: hidden;">
                            <strong style="font-size: 90px; line-height: 0.92" t-field="o.product_id.name"/>
                        </div>
                        <div class="row" style="height: 9mm; font-size: 25px">
                            <div class="col-6 text-left">
                                <strong t-field="o.product_id.__last_update" t-options="{'widget': 'date'}"/>
                            </div>
                            <div class="col-6 text-right">
                                <strong t-field="o.product_id.lst_price"
                                        t-options="{'widget': 'monetary', 'display_currency': o.product_id.company_id.currency_id}"/>
                            </div>
                        </div>
                        <div class="row" style="height: 45mm">
                            <div class="col-12 text-center align-middle">
                                <t t-if="o.product_id.barcode">

                                    <img t-if="o.product_id.barcode"
                                         t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(o.product_id.barcode or ''), 600, 120)"
                                         style="width:100%;height::3rem;"/>
                                    <span t-field="o.product_id.barcode"/>
                                </t>
                                <t t-else="">
                                    <span class="text-muted">No barcode available</span>
                                </t>
                            </div>
                        </div>
                        <div class="row" style="height: 45mm">
                            <div class="col-12 text-center align-middle mx-auto">
                                <t t-if="o.name">
                                    <img t-if="o.name"
                                         t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 120)"
                                         style="width:100%;height::3rem;"/>
                                    <span style="font-size: 24px;" t-field="o.name"/>
                                </t>
                                <t t-else="">
                                    <span class="text-muted">No barcode available</span>
                                </t>
                            </div>
                        </div>
                    </div>

                </t>
                <p style="page-break-before:always;"></p>
            </div>
        </t>
    </template>
</odoo>
