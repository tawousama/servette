			 <t t-set="isAddToCartActive" t-value="is_view_active('website_sale.products_add_to_cart')"/>
            <t t-set="isDescriptionActive" t-value="is_view_active('website_sale.products_description')"/>
        </xpath>

		<xpath expr="//form" position="attributes">
			<attribute name="t-attf-addcart">#{'active' if isAddToCartActive else 'inactive'}</attribute>
			<attribute name="t-attf-proddescription">#{'active' if isDescriptionActive else 'inactive'}</attribute>
        </xpath>

		<xpath expr="//div[hasclass('oe_product_image')]//a[hasclass('d-block')]" position="replace">
			<a t-att-href="product_href" t-attf-class="oe_product_image_link d-block h-100 position-relative {{'has_extra_hover_image' if product.hover_image else 'none'}}" itemprop="url" contenteditable="false">
                <t t-set="image_holder" t-value="product._get_image_holder()"/>
                <t t-if="website.is_lazy_load">
                	<span class="d-flex h-100 justify-content-center align-items-center product_image_holder oe_product_image_img_wrapper position-absolute">
                		<img class="img img-fluid lazyload" t-attf-data-src="/web/image/product.template/#{product.id}/image_1920" t-attf-src="/web/image/website/#{website.id}/lazy_load_image"></img>
                	</span>

                	<span class="d-flex h-100 justify-content-center align-items-center extra_hover_image" t-att-productid="product.id">
						<img class="img img-fluid lazyload" data-src="" t-attf-src="/web/image/website/#{website.id}/lazy_load_image"></img>
					</span>
                </t>
                <t t-else="">
	                <span t-field="image_holder.image_1920"
                        t-options="{'widget': 'image', 'preview_image': 'image_1024', 'class': 'position-absolute'}"
                        class="d-flex h-100 justify-content-center align-items-center product_image_holder oe_product_image_img_wrapper position-absolute"/>

                    <span class="d-flex h-100 justify-content-center align-items-center extra_hover_image " t-att-productid="product.id">
						<img class="img img-fluid lazyload" data-src="" t-attf-src="/web/image/website/#{website.id}/lazy_load_image"></img>
					</span>
                </t>
				<t t-set="bg_color" t-value="td_product['ribbon']['bg_color'] or ''"/>
				<t t-set="text_color" t-value="td_product['ribbon']['text_color']"/>
				<t t-set="bg_class" t-value="td_product['ribbon']['html_class']"/>
				<span t-attf-class="o_ribbon #{bg_class}" t-attf-style="#{text_color and ('color: %s; ' % text_color)}#{bg_color and 'background-color:' + bg_color}" t-out="td_product['ribbon']['html'] or ''"/>
            </a>
		</xpath>
		<!-- product hover image end -->

		<xpath expr="//div[hasclass('oe_product_image')]" position="inside">
			<!-- PRODUCT LABEL -->
			<t t-if="product.product_label_id">
				<t t-call="theme_decor.decor_product_label_common"/>
			</t>
			<!-- PRODUCT DISCOUNT -->
			<t t-set="template_price_vals" t-value="get_product_prices(product)"/>
			<t t-if="'base_price' in template_price_vals">
		       	<t t-set="diff_amount" t-value="round(template_price_vals['base_price'] - template_price_vals['price_reduce'])"/>
				<t t-set="dis_per" t-value="round(diff_amount * 100 / template_price_vals['base_price'])"/>
				<div class="decor-product-discount-label">
					<span class="decor-pro-label-disc">
					<t t-out="'-'+'%s'%(dis_per)+'&#x25;'"/></span>
				</div>
			</t>
		</xpath>

		<xpath expr="//div[hasclass('o_wsale_product_information_text')]" position="replace">
			<div class="p-2 o_wsale_product_information_text">
				<h6 class="o_wsale_products_item_title list_view_product_title d-none">
                    <a itemprop="name" t-att-href="product_href" t-att-content="product.name" t-field="product.name" />
                    <a role="button" t-if="not product.website_published" t-att-href="product_href" class="btn btn-sm btn-danger" title="This product is unpublished.">Unpublished</a>
                </h6>
				<t t-if="is_view_active('website_sale.product_comment')">
	                <t t-call="theme_decor.product_item_stars"/>
	            </t>
				<!-- <t t-if="is_view_active('website_sale.products_description')">
					<p class="prod-description list-view-description d-none" t-field="product.description_sale"/>
                </t> -->
				<h6 class="o_wsale_products_item_title">
                    <a itemprop="name" t-att-href="product_href" t-att-content="product.name" t-field="product.name" />
                    <a role="button" t-if="not product.website_published" t-att-href="product_href" class="btn btn-sm btn-danger" title="This product is unpublished.">Unpublished</a>
                </h6>
            </div>
		</xpath>
	</template>

