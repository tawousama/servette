	<!-- ajax cart btn start -->
	<template id="ajax_cart_button" inherit_id="theme_decor.list_view_wishlist_and_compare">
		<xpath expr="//div[hasclass('list_view_wishlist_and_compare')]" position="before">
			<t t-call="theme_decor.decor_product_add_cart_main_template">
				<t t-set="_icon" t-value="True"/>
				<t t-set="_text" t-value="False"/>
			</t>
		</xpath>
	</template>
	<!-- ajax cart btn end -->

	<!-- Ajax Cart -->
	<template id='model_add_cart_ajax_template' name="Add to Cart Ajax Popup Template">
        <t t-set="combination_info" t-value="product._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)"/>
        <div class="modal fade ajax-cart-modal" role="dialog" t-att-id="'AjaxcartModal-%s' %(product.id)" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-0 bg-white">
                    <div class="modal-body rounded-0 py-5">
                        <div class="">
                            <a class="btn btn-link close" data-bs-dismiss="modal" aria-label="Close">
								<span class="lnr lnr-cross"/>
                            </a>
                            <div class="d-md-flex align-items-center">
	                            <div class="flex-fill text-center">
	                                <a t-att-href="'/shop/%s' % slug(product)">
	                                    <img class="front" t-att-alt="product.name" t-att-title="product.name" t-att-src="website.image_url(product, 'image_1920','314x385')"/>
	                                </a>
	                            </div>
	                            <div class="flex-fill">
	                            	<h3 class='text-center'>
	                                    <t t-out="product.name"/>
	                                </h3>
	                                <div class="mb-4 text-center">
	                                	<span class="fa fa-check-circle text-success me-1"/>
	                                    <span>Successfully added to your</span>
	                                    <a href="/shop/cart">cart</a>
	                                </div>
	                                <div class="d-md-flex">
	                                    <a role="button" id="cnt_shopping" class="btn btn-outline-secondary flex-fill d-block d-md-inline-block" href="#" data-bs-dismiss="modal"><span>Continue Shopping</span></a>
	                                    <a role="button" id="checkout_shopping" class="btn btn-primary flex-fill ms-md-3 mt-3 mt-md-0 d-block d-md-inline-block" href="/shop/checkout?express=1"><span>Process Checkout</span></a>
	                                </div>
	                            </div>
	                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>

	<!-- Brand Filter Main Template -->
	<template id="product_brand_filter_template" name="Product Brand Filter Template">
		<t t-set="brands" t-value="website.get_product_brands(category)"/>
		<t t-set="hasActiveBrand" t-value="any((b.id in active_brand_list) for b in brands)"/>
		<t t-set="_status" t-value="'inactive'"/>
		<t t-if="hasActiveBrand" t-set="_status" t-value="'active'"/>

		<t t-if="brands">
			<div class="brand_filter_content">
				<button id="decor_brands_title" t-attf-class="accordion-button shadow-none rounded-0 {{button_classes}} {{ not active_brand_list and 'collapsed'}}"
					type="button"
					t-att-data-status="_status"
					data-bs-toggle="collapse"
					data-bs-target="#decor_brands"
					t-att-aria-expanded="_status == 'active' and 'True' or 'False'"
					aria-controls="decor_brands">
					<b>Brands</b>
				</button>
				<div t-attf-class="accordion-collapse collapse nav nav-pills brand-c {{ (_status == 'active') and 'show'}} {{show_classes}}" 
						t-att-aria-expanded="(_status == 'active') and 'True' or 'False'" id="decor_brands">
					<div t-attf-class="brand-height-overflow {{body_classes}}">
						<t t-set="count_value" t-value="0"/>
						<t t-foreach="brands" t-as="b">
							<t t-set="count_value" t-value="count_value + 1"/>
							<div class="form-check">
								<input name="brand" t-att-id="'%s-%s' % (b.id,slug(b))" type="checkbox" class="form-check-input me-2" t-att-value="slug(b)" t-att-checked="'checked' if b.id in active_brand_list else None"/>
								<label class="form-check-label fw-normal" t-att-for="'%s-%s' % (b.id,slug(b))" t-field="b.name"/>
								<t t-if="is_view_active('theme_decor.option_products_brands_count')">
									<span class="product_count">
										<span class="badge bg-primary rounded-pill">
											<span>
												<t t-out="b.with_context(product_brand_search=search).brand_count" />
											</span>
										</span>
									</span>
								</t>
							</div>
						</t>
					</div>
				</div>
			</div>
		</t>
	</template>

	 <template id="option_products_brands_count" inherit_id="theme_decor.products_brands" name="Enable Brand Product Count" active="False" customize_show="True">
    </template>
    
	<template id="decor_product_add_cart_main_template" name="Decor Product Add to Cart Main Template">
		<t t-set="isAddtoCartActive" t-value="is_view_active('website_sale.products_add_to_cart')"/>
		<t t-set="template_price_vals" t-value="get_product_prices(product)"/>
		<t t-set="product_variant_id" t-value="product._get_first_possible_variant_id()"/>

		<t t-if="isAddtoCartActive">
			<t t-if="product.product_variant_ids">
            	<t t-if="product_variant_id and template_price_vals['price_reduce'] or not website.prevent_zero_price_sale">
					<t t-if="product._website_show_quick_add()">
						<t t-if='product.optional_product_ids'>
							<div class="o_wsale_product_btn optional-btn">
								<a href="#" role="button" class="btn btn-link a-submit shop-cart" 
									aria-label="Add to Cart" title="Add to Cart">
									<span t-if="_icon" class="ri ri-shopping-cart-line fa"></span>
									<span t-if="_text" class="">ADD TO CART</span>
								</a>
							</div>
						</t>
						<t t-else="">
							<t t-if="len(product.product_variant_ids) == 1">
								<div class="ajax_cart_modal_tools position-relative">
									<a class="button btn btn-cart btn-link ajax-cart-btn a-submit shop-cart" title="Add to Cart" 
										data-bs-toggle="modal" t-att-data-bs-target="'#AjaxcartModal-%s' %(product.id)"> 
										<span t-if="_icon" class="ri ri-shopping-cart-line"></span>
										<span t-if="_text" class="">ADD TO CART</span>
									</a>
								</div>
							</t>
							<t t-if="len(product.product_variant_ids) &gt; 1">
								<div class="ajax_cart_modal_tools position-relative">
									<a class="button btn btn-cart btn-link select_btn" title="Select Variant"
										t-att-data-product-product-id="product.product_variant_ids[0].id" 
										t-att-data-product_template_id="product.id">
										<span t-if="_icon" class="ri ri-shopping-cart-line"></span>
										<span t-if="_text" class="">SELECT OPTION</span> 
									</a>
								</div>
							</t>
						</t>
					</t>
				</t>
				<t t-if="website.prevent_zero_price_sale and template_price_vals['price_reduce'] == 0">
					<div id="contact_us_wrapper">
						<a t-att-href="website.contact_us_button_url" class="btn btn-link btn_cta" title="Contact Us">
							<span t-if="_icon" class="ri ri-chat-3-line"></span>
							<span t-if="_text" class="">Contact Us</span> 
						</a>
					</div>
				</t>
			</t>
		</t>
	</template>

	<template id="add_to_quick_btn" name="Quick View Button" active="True">
	</template>
	<template id="shop_btn_option" name="Shop Buttons" inherit_id="website.snippet_options">
		<xpath expr="//we-button[hasclass('o_we_add_to_cart_btn')]" position="after">
			<we-button title="Quick View" class="ri ri-eye-line" data-customize-website-views="theme_decor.add_to_quick_btn" data-no-preview="true" data-reload="/"/>
		</xpath>
	</template>

