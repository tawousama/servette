	<template id="decor_product_pager" inherit_id="website_sale.products" name="decor Product Pager">
		<xpath expr="//div[hasclass('products_header')]" position="replace">
			<div class="decor_product_pager d-flex align-items-center">
				<!-- Back to category icon for mobile -->
				<div t-if="category" class="d-flex align-items-center d-lg-none me-auto">
					<t t-if="not category.parent_id" t-set="backUrl" t-valuef="/shop"/>
					<t t-else="" t-set="backUrl" t-value="keep('/shop/category/' + slug(category.parent_id), category=0)"/>

					<a t-attf-class="btn btn-outline-secondary me-2 rounded-0" t-att-href="category.parent_id and keep('/shop/category/' + slug(category.parent_id), category=0) or '/shop'">
						<i class="fa fa-angle-left"/>
					</a>
					<h4 t-out="category.name" class="mb-0 me-auto"/>
				</div>

				<a t-if="attrib_values or active_brand_list" 
					t-att-href="keep('/shop'+ ('/category/'+slug(category)) if category else None, attrib=0)" 
					t-attf-class="me-3 text-decoration-none btn btn-link p-0 text-black d-none d-md-block rounded-0 clear_filter_btn">
					<i class="oi oi-close align-middle"/>
					<span class="mx-auto">CLEAR FILTER</span>
				</a>

				<t t-if="is_view_active('website_sale.sort')">
					<div t-attf-class="o_sortby_dropdown dropdown dropdown_sorty_by decor_sortby">
						<a role="button" href="#" t-attf-class="dropdown-toggle btn btn-{{navClass}}" data-bs-toggle="dropdown">
							<span class="d-none d-lg-inline">
								<t t-if='isSortingBy'>
		                            Sorting by : <t t-out='isSortingBy[0][1]'/>
		                        </t>
								<span t-else="1" t-field="website.shop_default_sort"/>
							</span>
							<i class="fa fa-sort-amount-asc d-lg-none"/>
						</a>
						<div class="dropdown-menu dropdown-menu-start" role="menu">
							<t t-foreach="website_sale_sortable" t-as="sortby">
								<a role="menuitem" rel="noindex,nofollow" t-att-href="keep('/shop', order=sortby[0])" class="dropdown-item">
									<span t-out="sortby[1]"/>
								</a>
							</t>
						</div>
					</div>
				</t>

				<t t-call="website_sale.pricelist_list" t-cache="pricelist">
					<t t-set="_classes" t-valuef="d-none d-lg-inline ms-3"/>
				</t>

	            <div class="product_count_pager ms-3">
                    <t t-if="products and website.get_product_count_decor()">
                        <t t-set="pro_per_page_count" t-value="website.get_product_count_decor()"/>
                        <span t-attf-class="#{pro_per_page_count and len(pro_per_page_count['page_no'])&gt;1 and 'show_string' or 'o_hidden'}">
                            <div t-attf-class="#{pro_per_page_count and len(pro_per_page_count['page_no'])&gt;1 and 'dropdown' or 'o_hidden'} btn-group">
                                <t t-set="act_pro_per_page_count" t-value="website.get_current_pager_selection()"/>
                                <a class="dropdown-toggle btn btn-default" data-bs-toggle="dropdown" href="#">
                                    <t t-out="act_pro_per_page_count or ' - '"/>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li t-as="pl" t-foreach="pro_per_page_count['page_no']">
                                        <a t-att-href="'/shop/pager_selection/%s' % pl.id">
                                            <span class="switcher_pricelist" t-att-data-pl_id="pl.id" t-out="pl.name"/>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </span>
                    </t>
               	</div>

				<div class="pager-right ms-auto">
					<t t-call="theme_decor.decor_grid_list_btn"/>
					
					<button t-if="opt_wsale_categories or opt_wsale_attributes or opt_wsale_attributes_top"
							t-attf-class="rounded-0 btn btn-link position-relative filter_btn text-black pe-0 {{not opt_wsale_attributes_top and 'd-lg-none'}}"
							data-bs-toggle="offcanvas"
							data-bs-target="#o_wsale_offcanvas">
						<i class="icon icon-MusicMixer fa-lg"/>
						<span t-if="isFilteringByPrice or attrib_set or active_brand_list" t-attf-class="position-absolute top-0 start-100 translate-middle badge border border-{{navClass}} rounded-circle bg-danger p-1"><span class="visually-hidden">filters active</span></span>
					</button>
				</div>
	        </div>
		</xpath>
		
