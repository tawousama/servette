    <template id="product_buynow_bizople" inherit_id="website_sale.product_buy_now">
        <xpath expr="//a[contains(@t-attf-class,'o_we_buy_now')]" position="replace">
            <a role="button"  id="buy_now" t-attf-class="btn btn-primary btn-lg sticky_cart_button d-block d-md-inline-block mt-3 mt-md-0  o_we_buy_now #{'btn-lg' if ctaSizeBig else ''}" href="#">
                <span class="ri ri-share-forward-line align-middle me-2 text-white"/>BUY NOW
            </a>
        </xpath>
    </template>

    <template id="cart_button_inherid" inherit_id="website_sale.cart">
        <xpath expr="//a[hasclass('btn-secondary')]" position="attributes">
            <attribute name="class" separator=" " add="bizople_button" />
        </xpath>
        <xpath expr="//a[hasclass('btn-primary')]" position="attributes">
            <attribute name="class" separator=" " add="bizople_button" />
        </xpath>
    </template>

    <template id="cart_summary_button_inherid" inherit_id="website_sale.short_cart_summary">
        <xpath expr="//a[hasclass('btn-secondary')]" position="attributes">
            <attribute name="class" separator=" " add="bizople_button" />
        </xpath>
    </template>

    <template id="payment_button_inherid" inherit_id="website_sale.payment">

    </template>

    <template id="checkout_button_inherid" inherit_id="website_sale.checkout">
        <xpath expr="//a[hasclass('btn-secondary','mb32')]" position="attributes">
             <attribute name="class" separator=" " add="bizople_button" />
        </xpath>
        <xpath expr="//a[hasclass('btn-primary')]" position="attributes">
             <attribute name="class" separator=" " add="bizople_button" />
        </xpath>
    </template>

    <template id="address_button_inherid" inherit_id="website_sale.address">
        <xpath expr="//a[hasclass('btn-secondary','mb32')]" position="attributes">
             <attribute name="class" separator=" " add="bizople_button" />
        </xpath>
        <xpath expr="//a[hasclass('btn-primary','mb32')]" position="attributes">
             <attribute name="class" separator=" " add="bizople_button" />
        </xpath>
    </template>
    
    <template id="product_default_code">		
		<p itemprop="sku" t-if="default_code">
            <strong> SKU </strong>
            <span><t t-out="default_code"/></span>
        </p>
	</template>

    <template id="product_price_inherit" inherit_id="website_sale.product_price">

    </template>

    <template id="product_cart_sticky" inherit_id="website_sale.product" name="Enable Sticky Cart" active="True" customize_show="True">
        <xpath expr="//div[@id='product_details']" position="inside">
                <div class="cart_product_sticky_section">
                    <t t-if="product">
                        <div class="cart_product_sticky">
                            <div class="cart_product_sticky_div">
                                <div class="cart_prod_sticky d-flex align-items-center">
                                    <div class="cart_prod_img">
                                        <img t-att-src="'/web/image/product.template/%s/image_128' % product.id"
                                             class="img img-fluid rounded" alt="Product Image"/>
                                    </div>
                                    <div class="cart_prod_name">
                                        <h6 itemprop="name" t-field="product.name" class=" mt0 product_name">Product Name</h6>
                                        <div class="cart_prod_name_price">
                                            <t t-call="website_sale.product_price"/>
                                        </div>
                                    </div>
            
                                    <div class="cart_product_sticky_details">
                                        <div class="oe_website_sale">
                                              <t t-set="buynow_enabled"
                                                       t-value="is_view_active('website_sale.product_buy_now')"/>
                                            <form t-if="product._is_add_to_cart_possible()" action="/shop/cart/update"
                                                  method="POST">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                <div class="js_product js_main_product">
                                                    <t t-placeholder="select">
                                                        <input type="hidden" class="product_id" name="product_id"
                                                               t-att-value="product_variant.id"/>
                                                        <input type="hidden" class="product_template_id" name="product_template_id"
                                                               t-att-value="product.id"/>
                                                    </t>
                                                    <div class="ajax_cart_modal_tools position-relative">
                                                        <a role="button" id="" class="btn btn-primary btn-lg a-submit mr8 sticky_cart_button" href="#">
                                                            <span class="ri ri-shopping-cart-line"></span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
        </xpath>
   </template>

</odoo>